{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": []
    },
    {
      "label": "Start NocoDB",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/nocodb"
      },
      "problemMatcher": []
    },
    {
      "label": "Start All Servers",
      "dependsOn": [
        "Start Backend",
        "Start Frontend",
        "Start NocoDB"
      ],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
